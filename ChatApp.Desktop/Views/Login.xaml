<UserControl x:Class="ChatApp.Desktop.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Desktop.Views"
             mc:Ignorable="d" 
             MinHeight="100" MinWidth="100">
    <Grid Background="Gray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Width="209" Margin="166,164,159,166">
            <TextBox x:Name="UserName" HorizontalAlignment="Center" Width="160" Height="23" TextWrapping="Wrap" VerticalAlignment="Center" ></TextBox>
            <Button Name="LoginButton" Content="Login" Width="100" Background="Green" Foreground="White" Margin="0,10,25,0" Click="LoginButton_Click">
                
            </Button> 
        </StackPanel>
    </Grid>
</UserControl>
